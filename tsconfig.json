{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
